-- 2. HÃ m xÃ³a / táº¯t má»i nguá»“n sÃ¡ng
local function removeLight(obj)
    -- ðŸ”’ KHÃ”NG XÃ“A ÄÃˆN PIN PLAYEr

    if obj:IsA("PointLight")
    or obj:IsA("SpotLight")
    or obj:IsA("SurfaceLight") then
        obj.Enabled = false
        obj:Destroy()
    end

    -- Lá»­a (lÃ² sÆ°á»Ÿi, Ä‘uá»‘câ€¦)
    if obj:IsA("Fire") then
        obj.Enabled = false
        obj:Destroy()
    end

    -- Háº¡t phÃ¡t sÃ¡ng
    if obj:IsA("ParticleEmitter")
    or obj:IsA("Smoke") then
        obj.Enabled = false
        obj:Destroy()
    end

    -- Part phÃ¡t sÃ¡ng (Neon)
    if obj:IsA("BasePart") then
        if obj.Material == Enum.Material.Neon then
            obj.Material = Enum.Material.Plastic
        end
    end
end

-- 3. QuÃ©t toÃ n bá»™ map
for _, v in pairs(workspace:GetDescendants()) do
    pcall(function()
        removeLight(v)
    end)
end

-- 4. NgÄƒn Ä‘Ã¨n má»›i spawn sau nÃ y
workspace.DescendantAdded:Connect(function(v)
    task.wait()
    pcall(function()
        removeLight(v)
    end)
end)

print(">> All lights removed (flashlight protected)")
